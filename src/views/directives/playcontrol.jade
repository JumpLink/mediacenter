nav.navbar.navbar-inverse.navbar-fixed-bottom
  .container
    ul.media-list
      li.media
        .pull-left(href='#')
          img.media-object(alt='60x60', src='data:image/svg+xml;base64,', style='width: 60px; height: 60px;')
        .pull-right(ng-click="toggle_pause()", ng-switch, on="$root.player.status", )
          i.btn-player.fa.fa-play(ng-switch-when="pause")
          i.btn-player.fa.fa-pause(ng-switch-when="play")
          i.btn-player.fa.fa-play(disabled="disabled", ng-switch-when="stop")
        .timer.pull-right(ng-click="toggle_pause()", ng-switch, on="$root.player.status", )
          | {{$root.duration}}
          br
          | {{$root.length}} 
        .media-body
          h5.media-heading(ng-if="!$root.player.file.metadata.tvShow.name") {{$root.player.file.name}}
          h5.media-heading(ng-if="$root.player.file.metadata.tvShow.name") {{$root.player.file.metadata.tvShow.name}}
          | {{$root.player.file.metadata.episode.name}}
          br
          span(ng-if="$root.player.file.metadata.episode.season")
            | Season {{$root.player.file.metadata.episode.season}} / Episode {{$root.player.file.metadata.episode.number}}